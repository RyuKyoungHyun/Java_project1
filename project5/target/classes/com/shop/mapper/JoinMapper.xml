<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.shop.mapper.JoinMapper">
		<!--  회원가입 -->
		<insert id="insertUser">
			insert into users values (default, #{userId}, #{userPw}, #{userName}, #{tel}, #{phone}, #{email}, #{address}, #{zip}, #{nick}, #{eventYn}, default, #{birth}, 10000, 1)
		</insert>	
		
		<!--  로그인 -->
		<select id="loginUser" resultType="com.shop.domain.UsersVO">
			select userId, userPw, admin from Users where userId = #{userId} and userPw = #{userPw} 
		</select>
		
		<!-- 아이디 중복 검사 -->
		<select id="idCheck" resultType="int">
			select count(*) from users where userId = #{userId}
		</select>
	</mapper>